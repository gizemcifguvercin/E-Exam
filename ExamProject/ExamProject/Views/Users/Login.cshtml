@model IEnumerable<ExamProject.Models.User>
@{
    ViewBag.Title = "Login";
}
<style>
    
    input[type=text], input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }
    input[type=submit] {
        color: black;
        padding: 8px 8px;
        margin: 0 64%;
        border: none;
        cursor: pointer;
    }
</style>
<div class="container">

    @using (Html.BeginForm("Login", "Users", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <br /><br /><br /><br /><br /><br /><br /><br /><br />
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="text-center">

                    <div class="row">
                        <div class="col-md-12">
                            <h4 style="color:black">KULLANICI GİRİŞ</h4>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12">

                                <input type="text" id="userName" name="userName" placeholder="Kullanıcı Adı">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12">

                                <input type="password" id="password" name="password" placeholder="Şifre">
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2 col-xs-7">

                            </div>
                            <div class="col-md-10 col-xs-5">

                                <button type="submit" class="btn btn-info">Giriş Yap</button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-xs-8">
                            <h5>@TempData["errorMessage"] </h5>
                        </div>
                    </div>
                </div>
             </div>
         </div>
        }
    
    </div>











